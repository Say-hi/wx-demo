.showTitle{
    font-size: 70rpx;
    text-align: center;
    border-bottom: 1rpx dashed #000;
    text-shadow: 6rpx 5rpx 5rpx #ccc;
}
.movieContainer {
    font-size:30rpx;
    display: flex;
    padding: 10rpx;
}
.movieContainer image{
    flex: 1;
}
.movieContainer .content {
    width: 60%;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    text-align: left;
    box-sizing: border-box;
}
.movieContainer .content text {
    flex: 1;
    padding-top: 5%;
    font-family: "Microsoft Sans Serif";
}
.movieContainer .content .content-title{
    font-size: 30rpx;
}
